html
  width 100%
  height 100%
body
  background-color #000
  height 100%
  overflow hidden

#scene, .layer 
  display block
  height 100%
  width 100%
  padding 0
  margin 0
.ice-cream
  width 100%
  height 100%
  margin-top 4%

.layer
  position absolute
.ice
  img
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    max-height 90%
.spark
  img
    position absolute
    left 50%
    top 40%
    transform translate(-50%, -50%)
    max-height 67%
.spark1
  img
    top 35%
    left 50.5%
.spark2
  img
    top 36%
    left 52.5%

